#!/usr/bin/env ruby
require 'watchr'
require 'pathname'
require File.join(File.dirname(__FILE__), '..', 'lib', 'providence')

system('clear')
puts 'Watching files...'

Watchr::Controller.new(Watchr::Script.new(Pathname.new('/Users/chuckcollins/projects/personal/ruby/providence/watchrs/ror.watchr')), Watchr.handler.new).run